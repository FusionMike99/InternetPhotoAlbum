@model InternetPhotoAlbum.BLL.Models.GenderDTO

@using (Ajax.BeginForm("Create", "Genders", new AjaxOptions() { HttpMethod = "POST", UpdateTargetId = "modalChangePart", OnSuccess = "OnSuccess" }))
{
    <div class="modal-content" id="modalChangePart">

        <div class="modal-header">
            <h4 class="modal-title">Add gender</h4>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>

        <div class="modal-body">
            @Html.AntiForgeryToken()

            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <div class="col-6 mx-auto">
                <div class="form-floating mb-3 mt-3">
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Enter name" } })
                    @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "ms-2" })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="modal-footer col-3 mx-auto">
            <input type="submit" value="Add gender" class="btn btn-info text-light" />
        </div>
    </div>
}